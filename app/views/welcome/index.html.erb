<%= render "shared/header" %>

<main role="main">
  <section class="text-center">
    <div class="container">
      <div class="row pt-4">
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <div class="card-header">
              <h4 class="my-0 font-weight-normal">Products</h4>
            </div>
            <div class="card-body">
              <p class="card-text"></p>
              <div class="d-flex justify-content-between align-items-center">
                  <%= link_to "Products", products_path, class: "btn btn-lg btn-block btn-outline-primary" %>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <div class="card-header">
              <h4 class="my-0 font-weight-normal">Categories</h4>
            </div>
            <div class="card-body">
              <p class="card-text"></p>
              <div class="d-flex justify-content-between align-items-center">
                  <%= link_to "Categories", categories_path, class: "btn btn-lg btn-block btn-outline-primary" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

<%= render "shared/footer" %>
